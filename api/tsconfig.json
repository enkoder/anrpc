{
  "include": ["src/*"],
  "exclude": ["**/node_modules/*"],
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES5",
    "esModuleInterop": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "../dist",
    "skipLibCheck": true,
    "lib": ["ES5"],
    "strict": false,
    "types": ["@cloudflare/workers-types", "jest", "@types/node"]
  }
}
