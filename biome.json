{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "ignore": [
      "app/**/*.js",
      "app/src/client/**",
      "./api/.wrangler",
      "**/output.css",
      "spec.json",
      "node_modules",
      "dist"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": { "indentStyle": "space", "formatWithErrors": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
    }
  }
}
